<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MainColor"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/BitcoinButton"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/MainColor"
                    android:src="@drawable/upbar" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/FavouritesButtonP"
                android:layout_width="135dp"
                android:layout_height="94dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/MainGrey"
                android:src="@drawable/like_button"
                android:onClick="profile_to_favourites"/>

            <ImageButton
                android:id="@+id/HomeButtonP"
                android:layout_width="117dp"
                android:layout_height="94dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="@color/MainGrey"
                android:src="@drawable/icons8_home_48"
                android:onClick="profile_to_home"/>

            <ImageButton
                android:id="@+id/ProfileButtonP"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginTop="0dp"

                android:backgroundTint="@color/MainGrey"
                android:src="@drawable/profile_button" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>