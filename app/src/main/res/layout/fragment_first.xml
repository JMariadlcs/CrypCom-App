<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041C2C"
    tools:context=".FirstFragment" >

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar2"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#e4e4ec"
        app:backgroundTint="#E4E4EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="BottomAppBar" />

    <ImageButton
        android:id="@+id/HomeButtton"
        android:layout_width="106dp"
        android:layout_height="57dp"
        android:layout_marginEnd="152dp"
        android:backgroundTint="@color/MainGrey"
        android:src="@drawable/icons8_home_48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/ProfileButton"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/MainGrey"

        android:src="@drawable/profile_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/FavouritesButton"
        android:layout_width="94dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/MainGrey"
        android:src="@drawable/like_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/upBar"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/MainColor"
        android:src="@drawable/upbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HomeFavouriteProfile"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="163dp"
        android:fontFamily="@font/allerta"
        android:text="HOME"
        android:textColor="@color/MainColor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/NotifButton"
        android:layout_width="68dp"
        android:layout_height="37dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/MainGrey"
        android:src="@drawable/notifbutton"
        app:layout_constraintEnd_toEndOf="@+id/upBar"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@+id/upBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="367dp"
        android:layout_height="580dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/HomeButtton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upBar"
        app:layout_constraintVertical_bias="0.733">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/MainColor"
                android:src="@drawable/upbar" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>