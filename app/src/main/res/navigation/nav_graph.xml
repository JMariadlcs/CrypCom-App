<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.crypcomapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_profile"
            app:destination="@id/profile" />
        <action
            android:id="@+id/action_FirstFragment_to_favourites"
            app:destination="@id/favourites" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.crypcomapp.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_pop"
            app:popUpTo="@id/profile"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profile_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/favourites"
        android:name="com.crypcomapp.Favourites"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
</navigation>